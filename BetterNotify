-- Notification Library Code (to be hosted at a URL)

local NotificationLibrary = {}

local TEXT_COLOR = Color3.new(1, 1, 1)
local BACKGROUND_COLOR_START = Color3.fromRGB(30, 30, 60)
local BACKGROUND_COLOR_END = Color3.fromRGB(60, 60, 90)
local GUI_SIZE = UDim2.new(0, 300, 0, 100)

-- Function to create a notification
function NotificationLibrary:ShowNotification(message, soundUrl, customDuration)
    -- Create sound instance
    local sound = Instance.new("Sound")
    sound.SoundId = soundUrl -- Use the provided sound URL
    sound.Volume = 1
    sound.Parent = game:GetService("SoundService") -- Set the parent to SoundService

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "NotificationGui"
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    local frame = Instance.new("Frame")
    frame.Name = "NotificationFrame"
    frame.Size = GUI_SIZE
    frame.Position = UDim2.new(0.5, -150, 0.8, 0)
    frame.BorderSizePixel = 0
    frame.Parent = screenGui

    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0.1, 0)
    uiCorner.Parent = frame

    local gradient = Instance.new("UIGradient")
    gradient.Rotation = 90
    gradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, BACKGROUND_COLOR_START),
        ColorSequenceKeypoint.new(1, BACKGROUND_COLOR_END)
    }
    gradient.Parent = frame

    local textLabel = Instance.new("TextLabel")
    textLabel.Name = "NotificationText"
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.Position = UDim2.new(0, 0, 0, 0)
    textLabel.TextSize = 18
    textLabel.TextColor3 = TEXT_COLOR
    textLabel.BackgroundTransparency = 1
    textLabel.Font = Enum.Font.GothamSemibold
    textLabel.TextWrapped = true
    textLabel.Text = message
    textLabel.Parent = frame

    -- Show the GUI
    screenGui.Parent = game:GetService("CoreGui")

    -- Tween to show the notification
    frame:TweenPosition(UDim2.new(0.5, -150, 0.5, -50), Enum.EasingDirection.Out, Enum.EasingStyle.Quart, 0.5, true)

    sound:Play() -- Play the sound immediately

    wait(customDuration or 5) -- Wait for the specified duration

    -- Fade out effect
    for i = 0, 1, 0.1 do
        frame.BackgroundTransparency = i
        textLabel.TextTransparency = i
        wait(0.1)
    end

    screenGui:Destroy() -- Clean up the notification GUI
    sound:Destroy() -- Destroy the sound instance
end

return NotificationLibrary
